<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/bg_stroke3"
        app:cardBackgroundColor="@color/content_item"
        app:cardCornerRadius="3dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/content_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/civil_aviation_logo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/content_title"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/content_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="20dp"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:ellipsize="end"
                android:maxLines="3"
                android:fontFamily="@font/ruposhi_bangla_ui_uni_bold"
                android:text="@string/app_name"
                app:layout_constraintEnd_toStartOf="@id/expandBtn"
                app:layout_constraintTop_toTopOf="@id/content_icon"
                app:layout_constraintBottom_toBottomOf="@id/content_icon"
                app:layout_constraintStart_toEndOf="@+id/content_icon"
                />

            <ImageView
                android:id="@+id/expandBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:visibility="gone"
                android:layout_marginEnd="15dp"
                android:src="@drawable/arrow_down"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/content_title"
                app:layout_constraintBottom_toBottomOf="@id/content_title"
                app:layout_constraintStart_toEndOf="@+id/content_title"
                tools:ignore="ContentDescription" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>