<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="1dp"
        app:cardBackgroundColor="@color/dashboard_title"
        app:cardCornerRadius="0dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            >

            <ImageView
                android:id="@+id/home_sub_sub_content_icon"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_marginStart="0dp"
                android:src="@drawable/arrow_forward"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:padding="2dp"
                app:layout_constraintEnd_toStartOf="@+id/home_sub_sub_content_title"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/home_sub_sub_content_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="20dp"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:ellipsize="end"
                android:maxLines="1"
                android:fontFamily="@font/ruposhi_bangla_ui_uni_bold"
                android:text="@string/app_name"
                app:layout_constraintEnd_toStartOf="@id/expandBtn"
                app:layout_constraintTop_toTopOf="@id/home_sub_sub_content_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_sub_sub_content_icon"
                app:layout_constraintStart_toEndOf="@+id/home_sub_sub_content_icon"
                />

            <ImageView
                android:id="@+id/expandBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:visibility="gone"
                android:layout_marginEnd="15dp"
                android:src="@drawable/arrow_down"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/home_sub_sub_content_title"
                tools:ignore="ContentDescription" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>